<%- model_class = Resident -%>
<div class="page-header">
  <h1><%=t '.title', :default => Resident %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @resident.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:photo) %></dt>
      <dd><pre class="prettyprint"><%= @resident.photo %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cnic) %></dt>
      <dd><pre class="prettyprint"><%= @resident.cnic %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone) %></dt>
      <dd><pre class="prettyprint"><%= @resident.phone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @resident.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:guardian) %></dt>
      <dd><pre class="prettyprint"><%= @resident.guardian %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:thumbprint) %></dt>
      <dd><pre class="prettyprint"><%= @resident.thumbprint %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              residents_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_resident_path(@resident), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              resident_path(@resident),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

