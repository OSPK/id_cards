<%= form_for @resident, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :photo, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :photo, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cnic, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :cnic, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :guardian, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :guardian, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :thumbprint, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :thumbprint, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  residents_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
