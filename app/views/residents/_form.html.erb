<%= simple_form_for(@resident) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :cnic %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :guardian %>
    <%= f.input :thumbprint %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
